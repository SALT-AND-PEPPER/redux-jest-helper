{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "outDir": "dist"
  },
  "compileOnSave": false,
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
